            "exec": [
              "// Parse da resposta JSON\r",
              "const response = pm.response.json();\r",
              "\r",
              "// Validação básica\r",
              "pm.test(\"Token retornado com sucesso\", function () {\r",
              "    pm.expect(response).to.have.property(\"token\");\r",
              "});\r",
